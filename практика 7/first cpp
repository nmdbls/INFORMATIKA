#include <iostream>

void calculateProizv(const int* arr, int size, int& Pr) {
    Pr = 1; 
    for (int i = 0; i < size; i++) {
        Pr *= arr[i];
    }
}

void findArrayWithMaxProiz(const int* arrA, const int* arrB) {
    int PrA = 0, PrB = 0;


    calculateProizv(arrA, 5, PrA);
    calculateProizv(arrB, 4, PrB);


    if (PrA >= PrB) {
        std::cout << "Массив A: " << PrA << std::endl;
        std::cout << "Массив B: " << PrB << std::endl;
    }
    else {
        std::cout << "Массив B: " << PrB << std::endl;
        std::cout << "Массив A: " << PrA << std::endl;
    }
    std::cout << std::endl;
}

int main() {
    int* A = new int(5);
    int* B = new int(4);


    std::cout << "Введите " << 5 << " элементов для массива A:" << std::endl;
    for (int i = 0; i < 5; i++) {
        std::cin >> A[i];
    }

    std::cout << "Введите " << 4 << " элементов для массива B:" << std::endl;
    for (int i = 0; i < 4; i++) {
        std::cin >> B[i];
    }

    findArrayWithMaxProiz(A, B);

    delete[] A;
    delete[] B;

    return 0;
}
